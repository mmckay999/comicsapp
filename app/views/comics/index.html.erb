<p id="notice"><%= notice %></p>
<div class= 'container'>
  <%= form_for "",url: comics_path, role: "search", method: :get do %>
  <%= text_field_tag :search, @seach_term,placeholder: "Search by Title" %>
</div>
<% end %>

<table style="min-width: 100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Issue</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.title %></td>
        <td><%= comic.issue %></td>
        <td><%= comic.publisher %></td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


