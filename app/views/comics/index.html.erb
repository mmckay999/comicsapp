<p id="notice"><%= notice %></p>

<h1>Mike's Comics</h1>

<%= form_for "",url: comics_path, role: "search", method: :get do %>
 <%= text_field_tag :search, @seach_term,placeholder: "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Issue</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.title %></td>
        <td><%= comic.issue %></td>
        <td><%= comic.publisher %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comic', new_comic_path(@comics) %>
